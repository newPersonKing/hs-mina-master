.main{
  padding: 30rpx;
  overflow: hidden;
  width: 690rpx;
}
.label{
  font-size: 28rpx;
  font-weight: 600;
  padding-bottom: 10rpx;
}
.item{
  width: 690rpx;
  height:  306rpx;
  box-shadow: 10rpx 10rpx 24rpx rgba(0,0,0,0.05);
  margin-top: 40rpx;
  overflow: hidden;
  border-radius: 8rpx;
}
.item image{
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx auto 20rpx;
  background: none;
}
.item .title{
  font-size: 28rpx;
  text-align: center;
  line-height: 1em;
  font-weight: 600;
}
.item .content{
  font-size: 26rpx;
  text-align: center;
  width: 440rpx;
  margin: 30rpx auto;
}